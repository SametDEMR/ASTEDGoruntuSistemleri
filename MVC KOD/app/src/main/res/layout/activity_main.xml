<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Göz Pedi Hata Tespiti"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:textColor="#000" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:background="#E0E0E0"
            android:contentDescription="Yüklenen Göz Pedi Görseli" />

        <Button
            android:id="@+id/btnOpenSimulation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simülasyon Ortamını Aç"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/btnOpenCameraGallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kamera/Galeri Seçimi"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/resultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Analiz sonucu burada gözükecek"
            android:textSize="16sp"
            android:textStyle="italic"
            android:layout_marginTop="20dp"
            android:textColor="#333" />

    </LinearLayout>
</ScrollView>
